<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout android:layout_height="wrap_content"
        android:layout_width="match_parent" android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
            android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" android:theme="@style/AppTheme.AppBarOverlay"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>



    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:background="#1c519b"
        android:gravity="center_vertical"
        >
        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:background="#eee"
            android:elevation="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content">
        </SearchView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="#1c519b"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1c519b"
                android:orientation="horizontal"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle"
                    android:drawableTop="@drawable/ic_plastic"
                    android:paddingTop="25dp"
                    android:text="Plastic"
                    android:textColor="#fff"
                    android:paddingBottom="25dp"
                    tools:targetApi="honeycomb"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/circlea"
                    android:drawableTop="@drawable/ic_glass"
                    android:paddingTop="25dp"
                    android:text="Glass"
                    android:textColor="#fff"
                    android:paddingBottom="25dp"
                    android:layout_weight="1"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1c519b"
                android:orientation="horizontal"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circleb"
                    android:drawableTop="@drawable/ic_electronic"
                    android:paddingTop="25dp"
                    android:text="Electronic"
                    android:textColor="#fff"
                    android:paddingBottom="25dp"
                    tools:targetApi="honeycomb"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/circlec"
                    android:drawableTop="@drawable/ic_metal"
                    android:paddingTop="25dp"
                    android:text="Metals"
                    android:textColor="#fff"
                    android:paddingBottom="25dp"
                    android:layout_weight="1"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1c519b"
                android:orientation="horizontal"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circlef"
                    android:drawableTop="@drawable/ic_chemical"
                    android:paddingTop="25dp"
                    android:text="Chemical"
                    android:textColor="#fff"
                    android:paddingBottom="25dp"
                    tools:targetApi="honeycomb"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/circlee"
                    android:drawableTop="@drawable/ic_paper"
                    android:paddingTop="25dp"
                    android:text="Paper"
                    android:textColor="#fff"
                    android:paddingBottom="25dp"
                    android:layout_weight="1"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1c519b"
                android:orientation="horizontal"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circleg"
                    android:drawableTop="@drawable/ic_wood"
                    android:paddingTop="25dp"
                    android:text="Wood"
                    android:textColor="#fff"
                    android:paddingBottom="25dp"
                    tools:targetApi="honeycomb"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/circled"
                    android:drawableTop="@drawable/ic_other"
                    android:paddingTop="25dp"
                    android:text="Other"
                    android:textColor="#fff"
                    android:paddingBottom="25dp"
                    android:layout_weight="1"/>


            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
