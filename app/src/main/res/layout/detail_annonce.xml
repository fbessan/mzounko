<?xml version="1.0" encoding="utf-8"?>
<mzounko.hackhaton.com.m_zounko.ui.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:fillViewport="true"
    android:overScrollMode="never">

    <FrameLayout
        android:id="@+id/scroll_view_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false">

        <!-- Background photo -->
        <FrameLayout
            android:id="@+id/session_photo_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/session_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/details_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingBottom="@dimen/session_details_extra_space_bottom"
            android:paddingRight="@dimen/keyline_1"
            android:paddingTop="16.0dip">

        <TextView
            android:id="@+id/resume"
            style="@style/TextBody"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16.0dip"

            android:layout_marginLeft="@dimen/keyline_2_session_detail"
            android:text="Loremp ipsum dolor" />

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/keyline_2_session_detail"
            android:fadingEdgeLength="16.0dip"
            android:requiresFadingEdge="horizontal"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/categories"
                android:layout_width="wrap_content"
                android:layout_height="32.0dip"
                android:orientation="horizontal"></LinearLayout>
        </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/keyline_2_session_detail"
                android:fadingEdgeLength="16.0dip"
                android:requiresFadingEdge="horizontal"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/information"
                    android:layout_width="wrap_content"
                    android:layout_height="32.0dip"
                    android:orientation="horizontal"></LinearLayout>
            </HorizontalScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.0dip"
            android:layout_marginLeft="@dimen/keyline_2_session_detail"
            android:layout_marginTop="8.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prix untaire"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:text=""
                android:textColor="@color/body_text_1"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>






        </LinearLayout>

    </FrameLayout>


</mzounko.hackhaton.com.m_zounko.ui.ObservableScrollView>
