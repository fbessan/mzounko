<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jobber="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    jobber:cardBackgroundColor="#ffffffff"
    jobber:cardCornerRadius="@dimen/card_corner_radius"
    jobber:cardElevation="@dimen/card_elevation"
    jobber:cardPreventCornerOverlap="false">
      <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:orientation="vertical"
           android:padding="16dp"
           >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="fill_parent"
           android:orientation="horizontal"

           >
       <TextView
            android:id="@+id/libelle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2"
            android:fontFamily="@string/font_fontFamily_medium"
            android:text="@string/libelle"
            android:textColor="@color/body_text_1"
            android:textSize="@dimen/text_size_large"
            />
           <TextView android:textSize="@dimen/text_size_small"
               android:textStyle="bold"
               android:layout_gravity="center"
               android:id="@+id/statut"
               android:textColor="@color/nouv"
               android:padding="4dp"
               android:text="Nouveau"
               android:layout_weight="0"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/qtelibele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:lines="1"
            android:fontFamily="@string/font_fontFamily_medium"
            android:text="Quantité : "
            android:textColor="@color/body_text_1"
            android:textSize="@dimen/text_size_medium"
            />
            <TextView
                android:id="@+id/qte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:lines="1"
                android:fontFamily="@string/font_fontFamily_medium"
                android:text="90kg"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_medium"
                />


            <TextView
                android:id="@+id/prix"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.0"
                android:textStyle="bold"
                android:text="150FCFA/unité"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/hz"
            android:orientation="horizontal"
            android:layout_height="32dp">

            <TextView android:textSize="@dimen/text_size_medium"
                android:textColor="@color/body_text_1"
                android:gravity="center"
                android:id="@+id/categorie"
                android:layout_alignParentLeft="true"
                android:background="@drawable/status_chip"
                android:paddingLeft="8dp"
                android:text="Metal"
                android:paddingRight="8dp"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"

                />
            <TextView android:textSize="@dimen/text_size_medium"
                android:textColor="@color/body_text_1"
                android:gravity="center"
                android:id="@+id/type"
                android:layout_alignParentRight="true"
                android:background="@drawable/status_chip"
                android:padding="8dp"
                android:text="Achat"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="2.0dip"
                android:drawablePadding="4dp"
                />



        </LinearLayout>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_marginTop="4dp"
               android:id="@+id/info"
               android:orientation="horizontal"
               android:layout_height="32dp">

               <TextView android:textSize="@dimen/text_size_medium"
                   android:textColor="@color/body_text_1"
                   android:gravity="center"
                   android:id="@+id/reponse"
                   android:layout_alignParentLeft="true"
                   android:background="@drawable/status_chip"
                   android:paddingLeft="8dp"
                   android:text="2 réponses"
                   android:paddingRight="8dp"
                   android:layout_weight="1"
                   android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:layout_marginRight="2.0dip"
                   android:drawablePadding="4dp"
                   />
               <TextView android:textSize="@dimen/text_size_medium"
                   android:textColor="@color/body_text_1"
                   android:gravity="center"
                   android:id="@+id/reply"
                   android:layout_alignParentRight="true"
                   android:background="@drawable/status_chip"
                   android:paddingLeft="8dp"
                   android:drawableLeft="@drawable/reply"
                   android:text=""
                   android:layout_weight="1"
                   android:paddingRight="8dp"
                   android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:layout_marginRight="2.0dip"
                   android:drawablePadding="4dp"
                   />

           </RelativeLayout>
</LinearLayout>


</android.support.v7.widget.CardView>