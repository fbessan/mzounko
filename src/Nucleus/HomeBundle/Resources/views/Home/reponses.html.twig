{# src/Nucleus/HomeBundle/Resources/views/Home/login.html.twig #}
{% extends "NucleusHomeBundle::layout.html.twig" %}
{% block body %}
    <div class="container">
    <form action="/">
        <div class="row filters">
            <div class="three columns">
                <div class="field-group">
                    <label for="type_annonce">Types d'annonce</label>
                    <select class="type_annonce" id="type_annonce" name="type_annonce">
                        <option value="">Tous</option>
                        {% for elt in typeannonce if elt.id < 3 %}
                            <option selected value="{{elt.id}}" title="{{ elt.description }}">{{ elt.name }}</option>                      
                        {% endfor%}
                    </select>
                </div>
            </div>
            <div class="three columns">
                <div class="field-group">
                    <label for="type">Categorie</label>
                    <select class="categorie" id="categorie" name="categorie">
                      <option value="">Toutes</option>
                      {% for elt in categories %}
                        <option selected value="{{elt.id}}" title="{{ elt.unite }}">{{ elt.name }}</option>                      
                      {% endfor%}
                    </select>
                </div>
            </div>           
                <div class="three columns">
                    <div class="field-group">
                        <label for="status">Status</label>
                        <select class="status" id="status" name="status">
                          <option value="">Tous</option>
                          {% for elt in phases %}
                            <option selected value="{{elt.id}}" title="{{ elt.description }}">{{ elt.name }}</option>                      
                          {% endfor%}
                        </select>
                    </div>
                </div>
                    <div class="three columns">
                        <div class="field-group">
                            <label class="submit-label" for="submit">&nbsp;</label>
                            <input class="button-primary" id="submit" name="submit" type="submit" value="Recherche">
                        </div>
                    </div>

                </div>
            </form>
        </div>
        <div class="section annonces">
    <div class="container" id="reponse">
        <h3 class="center">{{ annonce.reponse|length}} réponse(s) à l'annonce #00{{ annonce.id}} </h3>
      <dl class="dix_derniers">
        {% for elt in annonce.reponse|reverse %}  
            
            <dt>{{elt.message}} <span class="badge annonce_status">{{ annonce.prixunitaire * elt.quantite}} F CFA</span><span class="badge annonce_status">{{elt.quantite}} {% if annonce.categorie.unite == 'Unité(s)'%} {{annonce.categorie.unite}}(s) {%else%} {{annonce.categorie.unite}} {%endif%}</span></dt>
            <dd>
              <p>{{elt.message}}</p> 
              
            </dd>
           
        {% endfor%}
        
      </dl>
      <br/>
        <p class="center">  <a class="button" href="{{ path('NucleusHomeBundle_reponse', {'id': annonce.id}) }}#reponse">Répondre à l'annonce #00{{ annonce.id}}</a></p>
      <div class="pagination"> 
        <ul>
          <li class="disabled"><a href="#">&laquo;</a></li>
          <li class="active"><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">4</a></li>
          <li><a href="#">&raquo;</a></li>
        </ul>
      </div>
    </div>
  </div>
 {% endblock %}
        
